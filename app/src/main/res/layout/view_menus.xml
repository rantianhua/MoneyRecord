<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/add_record"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/view_menus_img_menus"
        />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:id="@+id/view_menus_rl_menus"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/view_menus_img_menus"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="0dp"
            android:paddingRight="26dp"
            android:id="@+id/view_menus_rl_record"
            android:layout_alignParentBottom="true"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/view_menus_img_record"
                android:src="@mipmap/money_record"
                />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/view_menus_img_record"
                android:layout_toStartOf="@+id/view_menus_img_record"
                android:text="记一笔"
                android:background="@drawable/tv_menu_bg"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="0dp"
            android:paddingRight="26dp"
            android:id="@+id/view_menus_rl_chart"
            android:layout_above="@+id/view_menus_rl_record"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/view_menus_img_chart"
                android:src="@mipmap/chart"
                />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/view_menus_img_chart"
                android:layout_toStartOf="@+id/view_menus_img_chart"
                android:text="查看图表"
                android:background="@drawable/tv_menu_bg"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="0dp"
            android:paddingRight="26dp"
            android:id="@+id/view_menus_rl_user_center"
            android:layout_above="@+id/view_menus_rl_chart"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/view_menus_img_user_center"
                android:src="@mipmap/user_center"
                />

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/view_menus_img_user_center"
                android:layout_toStartOf="@+id/view_menus_img_user_center"
                android:text="个人中心"
                android:background="@drawable/tv_menu_bg"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>