<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="PopupMwnuAnim">
        <item name="android:windowEnterAnimation">@anim/abc_fade_in</item>
        <item name="android:windowExitAnimation">@anim/abc_fade_out</item>
    </style>

    <declare-styleable name="MyMenuItem">
        <attr name="textSize" format="reference|dimension"/>
        <attr name="tv_background" format="reference"/>
        <attr name="img_padding" format="dimension"/>
        <attr name="img_width" format="dimension"/>
        <attr name="img_height" format="dimension"/>
        <attr name="img_src" format="reference|integer"/>
    </declare-styleable>
</resources>
